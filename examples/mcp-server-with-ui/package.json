{
  "name": "mcp-server-with-ui",
  "version": "0.0.1",
  "private": true,
  "description": "Example MCP server with Tool UI components",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/server.js",
    "build:ui": "node scripts/build-ui.mjs",
    "start:ui": "node dist/ui-server.js",
    "dev:ui": "pnpm build:ui && node dist/ui-server.js"
  },
  "dependencies": {
    "@assistant-ui/tool-ui-server": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0"
  }
}
