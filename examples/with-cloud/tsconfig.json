{
  "extends": "@assistant-ui/tsconfig/app-base.json",
  "compilerOptions": {
    "target": "ES2017",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "strictNullChecks": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
