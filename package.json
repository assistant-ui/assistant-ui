{
  "name": "@assistant-ui/monorepo",
  "private": true,
  "scripts": {
    "docs:dev": "pnpm --filter=@assistant-ui/docs dev",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:publish": "turbo build --filter=\"./packages/*\" && changeset publish",
    "prettier": "prettier \"{examples,packages,apps}/**/*.{js,jsx,ts,tsx,md,json}\" --check",
    "prettier:fix": "prettier \"{examples,packages,apps}/**/*.{js,jsx,ts,tsx,md,json}\" --write",
    "build": "turbo build",
    "lint": "pnpm exec biome check",
    "test": "turbo test",
    "biome:check": "pnpm exec biome check",
    "biome:format": "pnpm exec biome format --write",
    "biome:lint": "pnpm exec biome lint --write",
    "biome:fix": "pnpm exec biome check --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@changesets/cli": "^2.29.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "packageManager": "pnpm@10.22.0"
}
