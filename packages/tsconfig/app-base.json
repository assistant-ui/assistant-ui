{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@assistant-ui/*": ["../../packages/*/src"],
      "@assistant-ui/react/*": ["../../packages/react/src/*"],
      "assistant-stream": ["../../packages/assistant-stream/src"],
      "assistant-stream/*": ["../../packages/assistant-stream/src/*"]
    }
  }
}
