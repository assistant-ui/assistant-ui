{
  "name": "@assistant-ui/mcp-docs-server",
  "version": "0.1.9",
  "description": "MCP server for assistant-ui documentation and examples",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "assistant-ui-mcp": "./dist/stdio.js"
  },
  "scripts": {
    "clean": "tsx scripts/clean.mts",
    "prepare-docs": "cross-env PREPARE=true node ./dist/prepare-docs/prepare.js",
    "build:cli": "tsup src/stdio.ts src/prepare-docs/prepare.ts src/index.ts --format esm --treeshake=smallest --splitting",
    "build": "pnpm clean && pnpm build:cli && pnpm prepare-docs",
    "dev": "tsx src/stdio.ts",
    "pretest": "pnpm build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "zod": "^4.1.11",
    "gray-matter": "^4.0.3",
    "cross-env": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "eslint": "^9.36.0"
  },
  "files": [
    "dist",
    ".docs",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
