{
  "name": "@assistant-ui/react-mastra",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js"
    },
    "./health": {
      "types": "./dist/health.d.ts",
      "import": "./dist/health.js"
    },
    "./performance": {
      "types": "./dist/performance.d.ts",
      "import": "./dist/performance.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsx scripts/build.mts",
    "dev": "tsx scripts/build.mts --watch",
    "test": "NODE_OPTIONS=\"--max-old-space-size=8192\" vitest run",
    "test:watch": "NODE_OPTIONS=\"--max-old-space-size=4096\" vitest",
    "test:ui": "NODE_OPTIONS=\"--max-old-space-size=4096\" vitest --ui",
    "test:performance": "NODE_OPTIONS=\"--max-old-space-size=4096\" vitest --config vitest.performance.config.ts",
    "test:memory": "tsx scripts/memory-test.mts",
    "test:integration": "NODE_OPTIONS=\"--max-old-space-size=4096\" vitest --config vitest.integration.config.ts",
    "test:memory-profile": "NODE_OPTIONS=\"--max-old-space-size=2048 --expose-gc\" vitest --config vitest.memory.config.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "quality-gates": "tsx scripts/quality-gates.mjs",
    "validate-production": "tsx scripts/validate-production-build.mts",
    "health-check": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsx -e \"import { performHealthCheck } from './src/health.js'; performHealthCheck({ includeMemoryDetails: true }).then(console.log);\""
  },
  "dependencies": {
    "@mastra/core": "^0.20.2",
    "@mastra/libsql": "latest",
    "ai": "^5.0.70",
    "assistant-stream": "^0.2.29",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "@assistant-ui/react": "^0.11.18",
    "@types/react": "*",
    "react": "^18 || ^19 || ^19.0.0-rc"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@assistant-ui/react": "workspace:*",
    "@assistant-ui/x-buildutils": "workspace:*",
    "@mastra/memory": "^0.15.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jsdom": "^26.1.0",
    "react": "19.1.1",
    "tsx": "^4.20.4",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "https://www.assistant-ui.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/assistant-ui/assistant-ui/tree/main/packages/react-mastra"
  },
  "bugs": {
    "url": "https://github.com/assistant-ui/assistant-ui/issues"
  }
}
