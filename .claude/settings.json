{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier \"{examples,packages,apps}/**/*.{js,jsx,ts,tsx,md,json}\" --write \"$CLAUDE_PROJECT_DIR/$CLAUDE_FILE_PATHS\""
          }
        ]
      }
    ]
  }
}
